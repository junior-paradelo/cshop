---
const title = "packs en oferta";

const items = [
  {
    src: "/pack-247-grano.webp",
    alt: "pack 24/7 grano",
    text: "24/7 Mix Grano",
    price: "29,50",
  },
  {
    src: "/pack-grand-original.webp",
    alt: "pack grand original",
    text: "Grand Original Party",
    price: "34,00",
  },
  {
    src: "/pack-party-grano.webp",
    alt: "pack party grano",
    text: "Party Mix Grano",
    price: "29,50",
  },
];
---

<div id="packs" class="bg-stone-300">
  <div class="mx-auto max-w-7xl py-24">
    <div class="text-center">
      <h1 class="font-semibold text-5xl text-balance text-stone-700 mb-4">
        {title}
      </h1>
      <section class="flex flex-wrap justify-center space-x-4">
        {
          items.map((item) => (
            <div class="basis-sm border-4 rounded-2xl border-stone-200 hover:scale-105 hover:transition-transform duration-400">
              <img class="cursor-pointer" src={item.src} alt={item.alt} />
              <h2 class="font-semibold text-4xl text-stone-700">{item.text}</h2>
              <p class="font-semibold text-2xl text-stone-700">
                $ {item.price}
              </p>
            </div>
          ))
        }
      </section>
    </div>
  </div>
</div>
